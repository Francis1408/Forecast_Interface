<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Redes Forecast</title>
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <body>
    <h1>Redes Forecast</h1>
    <div class="forecast-frame">
      <div class="frame-header">
        <p class="time-value">{{time}}</p>
      </div>
      <div class="data">
        <div>
          <p class='content-title'>TEMPERATURE</p>  
          <div class="temp-value">
            <p class="celsius-value">{{temp}}Â°C</p>
            <p class="fahrenheit-value"> </p>
          </div>
          <section class="thermometer">
            <div class="logo">
              <div class="bar">
                <div class="bar-fill"></div>
              </div>
              <div class="circle">
                <div class="circle-fill"></div>
              </div>
            </div>
          </section>
        </div>
        <div>
          <p class='content-title'>HUMIDITY</p> 
          <p class="hum-value">{{hum}}%</p>
        </div>
      </div>
      <div class="frame-footer">
        <p class="time-info"> </p>
      </div>
    </div>
    <script src="/js/forecast.js"></script>
  </body>
</html>